<h2>Percurso Oficial – Visita do Governador Wilson Lima</h2>
<p><strong>Data:</strong> 03 de julho de 2025</p>

<div id="map"></div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  // Coordenadas de referência aproximadas (substitua por coordenadas reais se tiver)
  const points = [
    {
      title: "1️⃣ Aeroporto Municipal",
      coords: [-7.2648, -64.8000]
    },
    {
      title: "2️⃣ Centro Dona Cesarina",
      coords: [-7.2640, -64.7980]
    },
    {
      title: "3️⃣ CASA Raimundo Domingos",
      coords: [-7.2630, -64.7950]
    },
    {
      title: "4️⃣ Defesa Civil",
      coords: [-7.2620, -64.7930]
    },
    {
      title: "5️⃣ CEM – Centro de Especialidades Médicas",
      coords: [-7.2610, -64.7910]
    },
    {
      title: "6️⃣ Corpo de Bombeiros",
      coords: [-7.2600, -64.7890]
    },
    {
      title: "7️⃣ Sede da Prefeitura",
      coords: [-7.2590, -64.7870]
    },
    {
      title: "8️⃣ CETI - Escola Estadual de Tempo Integral",
      coords: [-7.2580, -64.7850]
    }
  ];

  const map = L.map('map').setView([-7.2620, -64.7930], 15);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  const latlngs = [];

  points.forEach((point) => {
    L.marker(point.coords).addTo(map)
      .bindPopup(point.title);
    latlngs.push(point.coords);
  });

  L.polyline(latlngs, {color: 'blue'}).addTo(map);

</script>

